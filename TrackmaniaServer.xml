<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
   <Name Default="Trackmania Server">Trackmania Server</Name>
   <Overview>
    A dedicated server for Trackmania
    TitleID's:
    Trackmania
    SMStorm
    TMCanyon
    TMStadium
    TMValley
    TMLagoon
   </Overview>
   <Category>GameServers: Status:Stable</Category>

   <Registry>https://registry.hub.docker.com/r/harha/trackmania-server-docker</Registry>
   <Repository Default="harha/trackmania-server-docker:server">harha/trackmania-server-docker:server</Repository>

   <Privileged Default="false">false</Privileged>
   <Support>https://github.com/Harha/trackmania-server-docker</Support>

   <Network Default="host">bridge</Network>

   <Config
    Type="Variable"
    Name="Server title"
    Target="SERVER_TITLE"
    Default="Trackmania"
    Description="
    The TitleID for the game the server should be running. By default set to Trackmania 2020. Possible values are:
    Trackmania
    SMStorm
    TMCanyon
    TMStadium
    TMValley
    TMLagoon
    "
    Mask="false"
    Display="advanced"
    Required="true">Trackmania</Config>
    <Config
     Type="Variable"
     Name="Server name"
     Target="SERVER_NAME"
     Default="ServerName"
     Description="The visible name for the server."
     Mask="false"
     Display="advanced"
     Required="true">ServerName</Config>
     <Config
       Type="Port"
       Name="Server port TCP"
       Target="2350"
       Default="2350"
       Mode="tcp"
       Description="Server port"
       Display="always"
       Required="true">2350</Config>
       <Config
         Type="Port"
         Name="Server port UDP"
         Target="2350"
         Default="2350"
         Mode="udp"
         Description="Server port"
         Display="always"
         Required="true">2350</Config>
         <Config
           Type="Port"
           Name="XMLRPC port TCP"
           Target="3450"
           Default="3450"
           Mode="tcp"
           Description="XMLRPC port"
           Display="always"
           Required="true">3450</Config>
           <Config
             Type="Port"
             Name="XMLRPC port UDP"
             Target="3450"
             Default="3450"
             Mode="udp"
             Description="XMLRPC port"
             Display="always"
             Required="true">3450</Config>

   <Config
       Type="Path"
       Name="Config directory"
       Target="/home/server/tm_server/UserData/Config"
       Default="/mnt/user/appdata/TrackmaniaServer/config"
       Mode="rw"
       Description="This is where Trackmania will store it's configuration."
       Required="true">/mnt/user/appdata/TrackmaniaServer/config</Config>
       <Config
           Type="Path"
           Name="Maps directory"
           Target="/home/server/tm_server/UserData/Maps"
           Default="/mnt/user/appdata/TrackmaniaServer/maps"
           Mode="rw"
           Description="This is where Trackmania will store all the maps"
           Required="true">/mnt/user/appdata/TrackmaniaServer/maps</Config>
</Container>
