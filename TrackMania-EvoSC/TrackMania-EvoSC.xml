<?xml version="1.0"?>
<Container version="2">
  <Name>TrackMania-EvoSC</Name>
  <Repository>evotm/evosc:latest</Repository>
  <Registry>https://hub.docker.com/r/evotm/evosc</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/EvoTM/docker-trackmania</Project>
  <Overview>EvoSC for trackmania servers, default configuration is that it works with my trackmania2020 server template.&#xD;
&#xD;
Easiest way to make yourself admin for trackmania2020 is to join the server, then you login your database and go to the Players table. then you change the 3 to 1 behind your name(NOT ID).</Overview>
  <Category>GameServers: Status:Stable</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/L4stIdi0t/Unraid-template/master/TrackMania-Server/logoTM.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1637656144</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description/>
  <Networking>
    <Mode>bridge</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/Trackmania2020Server/</HostDir>
      <ContainerDir>/server/UserData</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/Trackmania2020Server/EvoSC/config/</HostDir>
      <ContainerDir>/controller/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/Trackmania2020Server/EvoSC/modules</HostDir>
      <ContainerDir>/controller/modules</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/Trackmania2020Server/EvoSC/cache</HostDir>
      <ContainerDir>/controller/cache</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value></Value>
      <Name>DB_HOST</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>DB_NAME</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>DB_USER</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>DB_PASSWORD</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value></Value>
      <Name>RPC_IP</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>SuperAdmin</Value>
      <Name>RPC_LOGIN</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>SuperAdmin</Value>
      <Name>RPC_PASSWORD</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="DB_HOST" Target="DB_HOST" Default="" Mode="" Description="Container Variable: DB_HOST" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="DB_NAME" Target="DB_NAME" Default="" Mode="" Description="Container Variable: DB_NAME" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="DB_USER" Target="DB_USER" Default="" Mode="" Description="Container Variable: DB_USER" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="DB_PASSWORD" Target="DB_PASSWORD" Default="" Mode="" Description="Container Variable: DB_PASSWORD" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="RPC_IP" Target="RPC_IP" Default="trackmania" Mode="" Description="Container Variable: RPC_IP" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="RPC_LOGIN" Target="RPC_LOGIN" Default="SuperAdmin" Mode="" Description="Container Variable: RPC_LOGIN" Type="Variable" Display="always" Required="true" Mask="false">SuperAdmin</Config>
  <Config Name="RPC_PASSWORD" Target="RPC_PASSWORD" Default="SuperAdmin" Mode="" Description="Container Variable: RPC_PASSWORD" Type="Variable" Display="always" Required="true" Mask="true">SuperAdmin</Config>
  <Config Name="trackmania server" Target="/server/UserData" Default="/mnt/user/appdata/TrackmaniaServer/" Mode="rw" Description="Container Path: /server/UserData" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/Trackmania2020Server/</Config>
  <Config Name="EvoSC Data" Target="/controller/config" Default="/mnt/user/appdata/TrackmaniaServer/EvoSC/config" Mode="rw" Description="Container Path: /controller/" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/Trackmania2020Server/EvoSC/config/</Config>
  <Config Name="EvoSC Data" Target="/controller/modules" Default="/mnt/user/appdata/TrackmaniaServer/EvoSC/modules" Mode="rw" Description="Container Path: /controller/modules" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/Trackmania2020Server/EvoSC/modules</Config>
  <Config Name="EvoSc Data" Target="/controller/cache" Default="/mnt/user/appdata/TrackmaniaServer/EvoSC/cache" Mode="rw" Description="Container Path: /controller/cache" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/Trackmania2020Server/EvoSC/cache</Config>
</Container>
