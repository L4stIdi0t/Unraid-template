<?xml version="1.0"?>
<Container version="2">
  <Name>TrackMania-Server</Name>
  <Repository>harha/trackmania-server-docker:server</Repository>
  <Registry>https://hub.docker.com/r/harha/trackmania-server-docker</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project>https://github.com/Harha/trackmania-server-docker</Project>
  <Overview>TitleID examples:&#xD;
    Trackmania&#xD;
    SMStorm&#xD;
    TMCanyon&#xD;
    TMStadium&#xD;
    TMValley&#xD;
    TMLagoon</Overview>
  <Category>GameServers: Status:Stable</Category>
  <WebUI/>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/L4stIdi0t/Unraid-template/main/Templates/Trackmania/logoTM.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1637593716</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>TitleID examples:&#xD;
    Trackmania&#xD;
    SMStorm&#xD;
    TMCanyon&#xD;
    TMStadium&#xD;
    TMValley&#xD;
    TMLagoon</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>2350</HostPort>
        <ContainerPort>2350</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>2350</HostPort>
        <ContainerPort>2350</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>3450</HostPort>
        <ContainerPort>3450</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>3450</HostPort>
        <ContainerPort>3450</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>5005</HostPort>
        <ContainerPort>5005</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/TrackmaniaServer/config</HostDir>
      <ContainerDir>/home/server/tm_server/UserData/Config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/TrackmaniaServer/maps</HostDir>
      <ContainerDir>/home/server/tm_server/UserData/Maps</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>Trackmania</Value>
      <Name>SERVER_TITLE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>Default Server name</Value>
      <Name>SERVER_NAME</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Server title" Target="SERVER_TITLE" Default="Trackmania" Mode="" Description="The TitleID for the game the server is running. See description" Type="Variable" Display="always" Required="true" Mask="false">Trackmania</Config>
  <Config Name="Server name" Target="SERVER_NAME" Default="Default Server name" Mode="" Description="The visible name for the server." Type="Variable" Display="always" Required="true" Mask="false">Default Server name</Config>
  <Config Name="Config files" Target="/home/server/tm_server/UserData/Config" Default="/mnt/user/appdata/TrackmaniaServer/config" Mode="rw" Description="This is where Trackmania will store it's configuration" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/TrackmaniaServer/config</Config>
  <Config Name="Maps directory" Target="/home/server/tm_server/UserData/Maps" Default="/mnt/user/appdata/TrackmaniaServer/maps" Mode="rw" Description="This is where Trackmania will store all the maps" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/TrackmaniaServer/maps</Config>
  <Config Name="Server port TCP" Target="2350" Default="2350" Mode="tcp" Description="Container Port: 2350" Type="Port" Display="always" Required="true" Mask="false">2350</Config>
  <Config Name="Server port UDP" Target="2350" Default="2350" Mode="udp" Description="Container Port: 2350" Type="Port" Display="always" Required="true" Mask="false">2350</Config>
  <Config Name="XMLRPC port TCP" Target="3450" Default="3450" Mode="tcp" Description="Container Port: 3450" Type="Port" Display="always" Required="true" Mask="false">3450</Config>
  <Config Name="XMLRPC port UDP" Target="3450" Default="3450" Mode="udp" Description="Container Port: 3450" Type="Port" Display="always" Required="true" Mask="false">3450</Config>
  <Config Name="Game Port" Target="5005" Default="5005" Mode="tcp" Description="Container Port: 5005" Type="Port" Display="always" Required="true" Mask="false">5005</Config>
</Container>
